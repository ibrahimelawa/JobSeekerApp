<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Language Preference"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4DB6AC"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/option_arabic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_saudi_flag"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="العربية"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/check_arabic"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_true"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/option_english"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_usa_flag"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="14sp"
            android:layout_marginStart="8dp"/>

        <ImageView
            android:id="@+id/check_english"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_true"
            android:layout_marginStart="8dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
